@model RxTracker.ViewModels.Transaction.Statistics
<script src="~/js/Statistic.js" asp-append-version="true"></script>

<div class="container">
  <div class="row">
    
    <div class="col-4">
      <h3>Filter By</h3>

      <div class="my-checkbox-group">
        <span>
          <input type="checkbox" id="includeInactive" />
          <label for="includeInactive"></label>
        </span>
        <label for="includeInactive">Include Inactive</label>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">Medication</span>
        </div>
        <select id="drugList" class="custom-select" asp-items="@(new SelectList(Model.DrugList, "Value", "Text"))"></select>
      </div>

      <div class="my-checkbox-group">
        <span>
          <input type="checkbox" id="includeBrandedGeneric" />
          <label for="includeBrandedGeneric"></label>
        </span>
        <label for="includeBrandedGeneric">Include Branded and Generic</label>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">Doctor</span>
        </div>
        <select id="doctorList" class="custom-select" asp-items="@(new SelectList(Model.DoctorList, "Value", "Text"))"></select>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">Pharmacy</span>
        </div>
        <select id="pharmacyList" class="custom-select" asp-items="@(new SelectList(Model.PharmacyList, "Value", "Text"))"></select>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">Date From</span>
        </div>
        <input type="date" id="dateFrom" class="form-control">
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">Date To</span>
        </div>
        <input type="date" id="dateTo" class="form-control">
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">Cost From $</span>
        </div>
        <input type="number" id="costFrom" class="form-control">
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">Cost To $</span>
        </div>
        <input type="number" id="costTo" class="form-control">
      </div>

    </div>

    <div id="partialView" class="col-8"><partial name="_StatisticsPartial" model="Model.StatisticsList" />

    </div>
  </div>
</div>