@model RxTracker.Models.Doctor

<form id="myForm" asp-action="Edit">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <input type="hidden" asp-for="DoctorId" id="recordId" />

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text">Name</span>
    </div>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text">Hospital</span>
    </div>
    <input asp-for="Hospital" class="form-control" />
    <span asp-validation-for="Hospital" class="text-danger"></span>
  </div>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text">Address</span>
    </div>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
  </div>

  <div class="form-group">
    <input type="button" id="btnSave" class="btn btn-primary" value="Save" />
    <button type="button" id="btnDelete" class="btn btn-danger">Delete</button>
  </div>
</form>