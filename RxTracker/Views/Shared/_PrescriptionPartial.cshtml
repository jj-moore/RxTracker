@model EditViewModel

<form asp-action="Edit">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <input type="hidden" asp-for="Prescription.PrescriptionId" id="recordId" />

  <div class="my-checkbox-group">
    <span>
      <input type="checkbox" id="Active" asp-for="Prescription.Active" />
      <label for="Active"></label>
    </span>
    <label for="Active">Active</label>
  </div>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">Medication</span>
    </div>
    <select asp-for="Prescription.DrugId" class="form-control" asp-items="@(new SelectList(Model.Drugs, "Value", "Text"))"></select>
    <span asp-validation-for="Prescription.DrugId" class="text-danger"></span>
  </div>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">Doctor</span>
    </div>
    <select asp-for="Prescription.DoctorId" class="form-control" asp-items="@(new SelectList(Model.Doctors, "Value", "Text"))"></select>
    <span asp-validation-for="Prescription.DoctorId" class="text-danger"></span>
  </div>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">Form</span>
    </div>
    <input asp-for="Prescription.Form" class="form-control" />
    <span asp-validation-for="Prescription.Form" class="text-danger"></span>
  </div>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">Dosage</span>
    </div>
    <input asp-for="Prescription.Dosage" class="form-control" />
    <span asp-validation-for="Prescription.Dosage" class="text-danger"></span>
  </div>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">Regimen</span>
    </div>
    <input asp-for="Prescription.Regimen" class="form-control" />
    <span asp-validation-for="Prescription.Regimen" class="text-danger"></span>
  </div>

  <div class="form-group">
    <input type="submit" value="Save" class="btn btn-primary" />
    <button type="button" id="btnDelete" class="btn btn-danger">Delete</button>
  </div>
</form>