@model EditViewModel

  <h4>Prescription</h4>
  <hr />
  <div class="row">
      <div class="col-md-4">
          <form asp-action="View">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <input type="hidden" asp-for="Prescription.PrescriptionId" />

              <div class="form-group">
                  <label asp-for="Prescription.DoctorId" class="control-label"></label>
                  <select asp-for="Prescription.DoctorId" class="form-control" asp-items="@(new SelectList(Model.Doctors, "Value", "Text"))"></select>
                  <span asp-validation-for="Prescription.DoctorId" class="text-danger"></span>
              </div>
              <div class="form-group">
                  <label asp-for="Prescription.DrugId" class="control-label"></label>
                  <select asp-for="Prescription.DrugId" class="form-control" asp-items="@(new SelectList(Model.Drugs, "Value", "Text"))"></select>
                  <span asp-validation-for="Prescription.DrugId" class="text-danger"></span>
              </div>
              <div class="form-group form-check">
                  <label class="form-check-label">
                      <input class="form-check-input" asp-for="Prescription.Active" /> @Html.DisplayNameFor(model => model.Prescription.Active)
                  </label>
              </div>
              <div class="form-group">
                  <label asp-for="Prescription.Form" class="control-label"></label>
                  <input asp-for="Prescription.Form" class="form-control" />
                  <span asp-validation-for="Prescription.Form" class="text-danger"></span>
              </div>
              <div class="form-group">
                  <label asp-for="Prescription.Dosage" class="control-label"></label>
                  <input asp-for="Prescription.Dosage" class="form-control" />
                  <span asp-validation-for="Prescription.Dosage" class="text-danger"></span>
              </div>
              <div class="form-group">
                  <label asp-for="Prescription.Regimen" class="control-label"></label>
                  <input asp-for="Prescription.Regimen" class="form-control" />
                  <span asp-validation-for="Prescription.Regimen" class="text-danger"></span>
              </div>
              <div class="form-group">
                  <input type="submit" value="Save" class="btn btn-primary" />
              </div>
          </form>
      </div>
  </div>

  <div>
      <a asp-action="Index">Back to List</a>
  </div>